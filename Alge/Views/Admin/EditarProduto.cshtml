@{
  
    Layout = "~/Views/Shared/_IntraNetLayout.cshtml";
    ViewBag.SearchBar = true;


}

@model Alge.Models.Produto.Produto;

<div class="container">
    <div style="margin-bottom: 20px;" class="row">
        <div class="col-md-4 col-md-offset-4"><h2>Editar Produto</h2></div>
    </div>
    <div class="col-md-12 my-5">
        <div class="form-row">



          
           
            <div class="form-group col-sm-8">

                <form action="" method="post" enctype="multipart/form-data">
                    @using (Html.BeginForm())
                    {

                        @Html.Label("ID")
                        @Html.TextBoxFor(model => model.id_produto, new { @class = "form-control", disabled = true, })
                        @Html.ValidationMessageFor(model => model.id_produto)


                        <input type="file" name="Imagem" class="form-control" />
                       
                        
                        <img src="@Model.imagem" runat="server" style="max-width:100px; max-height:60px" />



                        <br />
                        @Html.Label("Nome")
                        @Html.TextBoxFor(model => model.nome, new { @class = "form-control", placeholder = "Nome", @id = "nome", maxlength = "11" })
                        @Html.ValidationMessageFor(model => model.nome)

                        @Html.Label("Descrição")
                        @Html.TextBoxFor(model => model.descricao, new { @class = "form-control", placeholder = "Descrição", @id = "des", maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.descricao)
                        <br />

                        @Html.Label("Preço")
                        @Html.TextBoxFor(model => model.preco, new { @class = "form-control", placeholder = "Preço", @id = "pre", maxlength = "10" })
                        @Html.ValidationMessageFor(model => model.preco)
                        <br />




                        <p style="font-size:30px; color:red">@ViewBag.Message</p>
                        <p>
                            <input style="max-width:300px;" type="submit" name="@Model.id_produto" value="Salvar" class="form-control btn-outline-info" />
                        </p>
                    }
                </form>
                    
            </div>









        </div>

    </div>
</div>

<script>


    $(document).ready(function () {
        $("#qtd").keyup(function () {
            $("#qtd").val(this.value.match(/[0-9]*/));
        });
    });
</script>


