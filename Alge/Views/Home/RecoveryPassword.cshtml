@model Alge.Models.UserModelRecovery;

@{
    ViewBag.Title = "Redefinir Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="container-fluid">
            <!--        Corpo Site-->
            <div style="margin-bottom: 20px;" class="row">
                <div class="col-md-offset-4 col-md-4"><h2>"Alteara sua senha"</h2></div>
            </div>

            <div style="margin-bottom: 20px;" class="row">
                <div class="col-md-offset-4 col-md-4"><p>Digite a nova senha desejada  e  na sequência digite a mesma senha para confirmar</p></div>
            </div>

            <div class="row">


                <div class="col-md-offset-4 col-md-4">
                    <form class="form">
                        <div class="form-group loginInputs">
                            @Html.PasswordFor(model => model.PasswordRecovery, new { @class = "global-form-style", placeholder = "nova senha" })
                            @Html.ValidationMessageFor(model => model.PasswordRecovery, null, new { @class = "validation-message" })

                            @Html.PasswordFor(model => model.ConfirmPasswordRecovery, new { @class = "global-form-style", placeholder = "confirme a nova senha" })
                            @Html.ValidationMessageFor(model => model.ConfirmPasswordRecovery, null, new { @class = "validation-message" })

                            <p class="validation-message">@ViewBag.Message</p>
                            <p>
                                <input type="submit" value="Atualizar" class="btn btn-primary" />
                            </p>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </fieldset>
}

